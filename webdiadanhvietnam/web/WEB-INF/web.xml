        <servlet-name>contact</servlet-name>
        <url-pattern>/lien-he</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>admin</servlet-name>
        <jsp-file>/admin/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin/</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>admin_dashboard</servlet-name>
        <jsp-file>/admin/bang-dieu-khien.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin_dashboard</servlet-name>
        <url-pattern>/admin/bang-dieu-khien</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>admin_dang-xuat</servlet-name>
        <jsp-file>/admin/dang-xuat.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin_dang-xuat</servlet-name>
        <url-pattern>/admin/dang-xuat</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>admin_dang_nhap</servlet-name>
        <jsp-file>/admin/dang-nhap.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin_dang_nhap</servlet-name>
        <url-pattern>/admin/dang-nhap</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>admin_dang_ky</servlet-name>
        <jsp-file>/admin/dang-ky.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin_dang_ky</servlet-name>
        <url-pattern>/admin/dang-ky</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>admin_dia_hinh</servlet-name>
        <jsp-file>/admin/dia-hinh.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin_dia_hinh</servlet-name>
        <url-pattern>/admin/dia-hinh</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>admin_tinh_thanh_pho</servlet-name>
        <jsp-file>/admin/tinh-thanh-pho.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin_tinh_thanh_pho</servlet-name>
        <url-pattern>/admin/tinh-thanh-pho</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
